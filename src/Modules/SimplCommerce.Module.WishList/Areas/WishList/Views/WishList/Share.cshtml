@{
    ViewData["Title"] = Localizer["Wish List Sharing Information"];
}

<div class="row">
    <div class="col-md-3">
        @Html.Partial("_AccountMenu")
    </div>
    <div class="col-md-9">
        <h2>@Localizer["Wish List Sharing Information"]</h2>
        <p>@Html.ValidationSummary(false)</p>
        <hr />
        <form asp-area="WishList" asp-controller="WishList" asp-action="Share" method="POST">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">@Localizer["Email Address"]</label>
                <div class="col-sm-8"><input type="email" name="EmailAddress" /></div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">@Localizer["Message"]</label>
                <div class="col-sm-8"><textarea rows="5" cols="50" name="Message"></textarea></div>
            </div>
            <div class="form-group row">
                <div class="offset-md-4 col-md-8">
                    <button type="submit" class="btn btn-primary share-wishlist">@Localizer["Share"]</button>
                </div>
            </div>
        </form>
    </div>
</div>
