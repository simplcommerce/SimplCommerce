@model SimplCommerce.Module.WishList.ViewModels.AddToWishListResult

<div class="modal-header">
    <h4 class="modal-title" id="myModalLabel">@Localizer[Model.Message]</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-4">
            <img alt="@Model.Item.ProductName" class="img-fluid" src="@Model.Item.ProductImage">
        </div>
        <div class="col-md-8">
            <h4>@Model.Item.ProductName</h4>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a href="~/user/wishlist" type="button" class="btn btn-default">@Localizer["View Wish List"]</a>
</div>
